<!-- Page Content -->
<section class="sign-up bg-white py-5">
  <div class="text-center mb-5">
    <h2>Make an Account</h2>
  </div>
  <div class="row page-width justify-content-center px-3">
    <div class="bg-dark text-white p-4 rounded shadow-sm">
      <h2 class="text-center">Sign Up</h2>
      <form class="d-flex flex-column gap-4" action="/sign-up" method="POST">
        <div class="form-group">
          <label>Name</label>
          <input type="text" class="form-control mt-2" placeholder="Enter your name" required>
        </div>
        <div class="form-group">
          <label>Email address</label>
          <input type="email" class="form-control mt-2" placeholder="Enter email" required>
        </div>
        <div class="form-group">
          <label>Password</label>
          <input type="password" class="form-control" placeholder="Password" required>
        </div>
        <button type="submit" class="btn sign-up-btn btn-block" name="btn">Sign Up</button>
      </form>
    </div>
    <sub class="text-center mt-4 fw-bold"><a href="/login" class="text-danger">Log In Instead</a></sub>
  </div>
</section>

