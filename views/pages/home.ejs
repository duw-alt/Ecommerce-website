<!-- newest releases section -->
<section class="newest-releases bg-white">
  <div class="row text-center page-width">
    <h1>NEWEST RELEASES</h1>
  </div>
  <div class="row page-width px-3">
    <div class="owl-theme owl-carousel product-slider">
      <% products.forEach(product => { %>
        <a href="shop/product/<%= product.id %>">
          <div class="item">
            <div class="img-wrap">
              <img src="<%= product.image %>">
            </div>
            <div class="info-wrap mb-4">
              <div class="stars text-warning">
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-fill"></i>
              </div>
              <h5 class="mt-2 text-black"><%= product.name %></h5>
              <h6 class="text-secondary"><%= product.price %></h6>
            </div>
        </div>
        </a>
      <% }) %>
    </div>
  </div>
</section>

<!-- fixed background section -->
