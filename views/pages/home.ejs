      <p class="text-danger">DISCOUNT 20% OFF</p>
      <h1>DJI Avata 2</h1>
      <a href="/shop/product/1">
        <button class="shop-now-btn">BUY NOW <i class="bi bi-caret-right"></i> </button>
      </a>
    </div>
  </div>
</section>


<!-- blog section -->
<section class="blog-sec bg-white">
  <div class="row text-center mb-5 page-width">
    <h1> <i class="bi bi-x"></i> BLOG <i class="bi bi-x"></i> </h1>
  </div>
  <div class="row page-width px-3">
    <div class="owl-carousel owl-theme blog-sec-slider">
      <% blogs.slice(5).forEach(blog => { %>
        <div class="item mb-5 rounded shadow">
          <div class="img-wrap">
            <div class="blog-date"><%= blog.date %></div>
            <img src="<%= blog.image %>" class="blog-sec-img img-fluid rounded">
          </div>
          <div class="info-wrap mb-4">
            <h5 class="mt-3"><%= blog.title %></h5>
            <p class="text-secondary"><%= blog.description %></p>
            <a href="/blog/<%= blog.id %>">
              <button class="blog-btn">Read Article</button>
            </a>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</section>

