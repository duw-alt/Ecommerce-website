<!-- Page Content -->
<section class="login bg-white py-5">
  <div class="text-center mb-5">
    <h2>Log in to your Account</h2>
  </div>
  <div class="row page-width justify-content-center px-3">
    <div class="bg-light p-4 rounded shadow">
      <h2 class="text-center">Login</h2>
      <form class="d-flex flex-column gap-4" action="/login" method="POST">
        <div class="form-group">
          <label>Email address (example.user@gmail.com)</label>
          <input type="email" class="form-control mt-2" placeholder="Enter email" name="mail" required >
        </div>
        <div class="form-group">
          <label>Password (1234)</label>
          <input type="password" class="form-control mt-2" placeholder="Password" name="pass" required>
        </div>
        <button type="submit" class="btn btn-dark btn-block">Login</button>
      </form>
    </div>
    <sub class="text-center mt-4 fw-bold"><a href="/sign-up" class="text-danger">New to our Website? Sign Up Now</a></sub>
  </div>
</section>

